<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >

    <ImageView
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:id="@+id/home_item_image"
        android:layout_marginRight="32dp"
        android:layout_centerVertical="true"
        >
    </ImageView>

    <TextView
        android:id="@+id/home_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/home_item_image"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Title"></TextView>

    <TextView
        android:id="@+id/home_item_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/home_item_image"
        android:layout_below="@id/home_item_title"
        android:text="Title"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_item_image"
        android:layout_marginTop="2dp">
    </LinearLayout>
    

</RelativeLayout>